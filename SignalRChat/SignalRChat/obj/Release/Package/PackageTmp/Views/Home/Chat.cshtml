@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>
<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="text" id="displayname" placeholder="Enter your name" /> <!-- 修改此处，使用输入框输入用户名 -->
    <!-- 新增：添加一个输入框来输入目标用户的 ConnectionId -->
    <input type="text" id="targetUserId" placeholder="Enter target user's ConnectionId" />
    <ul id="discussion">
    </ul>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        // 定义一个函数来转义特殊字符为 HTML 实体
        function htmlEncode(value) {
            return $('<div/>').text(value).html();
        }

        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (fromUserName, message) { // 修改这里的方法名为 addNewMessageToPage
                // Add the message to the page, using htmlEncode to prevent HTML injection
                $('#discussion').append('<li><strong>' + htmlEncode(fromUserName)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            // Set initial focus to username input box.
            $('#displayname').focus();
            // Start the connection with long polling.
            $.connection.hub.start({ transport: 'longPolling' }).done(function () {
                // 获取当前客户端的连接 ID
                var connectionId = $.connection.hub.id;
                // 打印连接 ID
                console.log("My Connection ID: " + connectionId);

                // 然后绑定点击事件以发送消息
                $('#sendmessage').click(function () {
                    // 获取目标用户的 ConnectionId
                    var targetUserId = $('#targetUserId').val();
                    // 获取用户名
                    var fromUserName = $('#displayname').val(); // 获取输入框中的用户名
                    // 调用 Send 方法
                    var message = $('#message').val();
                    chat.server.send(targetUserId, message, fromUserName); // 修改参数列表，添加用户名
                    // Add the message to the page immediately
                    $('#discussion').append('<li><strong>You</strong>: ' + htmlEncode(message) + '</li>');
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });


    </script>
}