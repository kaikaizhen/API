@{
    ViewBag.Title = "Chat";
}

<link href="~/wwwroot/css/chatroom.css" rel="stylesheet" />

<h2>Chat</h2>
<div class="container">

    <div id="chat-window">
        <ul id="discussion"></ul>
    </div>
    <div id="input-container">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="Send" />
        <input type="text" id="displayname" placeholder="Enter your name" />

        <input type="button" id="connectToUser" value="Connect to User" />
    </div>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->

    <script>
        $(function () {
            var urlParams = new URLSearchParams(window.location.search);
            var userId = urlParams.get('user');
            var reuserId = urlParams.get('reuser');
            var chat = $.connection.chatHub;
            document.getElementById("displayname").value = userId;

            function htmlEncode(value) {
                return $('<div/>').text(value).html();
            }

            chat.client.addNewMessageToPage = function (fromUserName, message) {
            
                
                $('#discussion').append('<li><strong>' + htmlEncode(fromUserName)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };

            chat.client.initializeData = function (previousData) {
                $('#discussion').empty();
                previousData.forEach(function (message) {
                    $('#discussion').append('<li>' + message + '</li>');
                });
            };

            $('#displayname').focus();

            $.connection.hub.start().done(function () {
                var connectionId = $.connection.hub.id;
                console.log("連接Id: " + connectionId + " ,User Id: " + userId + " ,reUser Id: " + reuserId);
                chat.server.connect(userId, connectionId);

                chat.server.getPreviousData(userId, reuserId).done(function (previousData) {
                    console.log("Previous data:", previousData);
                });

                $('#sendmessage').click(function () {
                    
                    var fromUserName = $('#displayname').val();
                    var message = $('#message').val();
                    chat.server.send(userId, reuserId, fromUserName, message);
                    $('#discussion').append('<li><strong>You</strong>: ' + htmlEncode(message) + '</li>');
                    $('#message').val('').focus();
                });
            });

            $.connection.hub.disconnected(function () {
                chat.server.disconnection(userId);
            })
        });

    </script>
}
